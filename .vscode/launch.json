    "version": "0.2.0",
    "configurations": [
        {
            "name": "health-check",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/packages/health-check"
        },
                {
            "name": "Chat load",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start:load"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/packages/chat"
        },
                        {
            "name": "Chat run",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start:run"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/packages/chat"
        }
    ]
}